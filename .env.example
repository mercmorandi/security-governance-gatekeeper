# ===========================================
# Security Gatekeeper - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION
# ===========================================
DEBUG=false

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
DATABASE_URL=postgresql+asyncpg://gatekeeper:gatekeeper@localhost:5432/gatekeeper

# ===========================================
# REDIS (Rate Limiting)
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# ROLE POLICIES
# ===========================================
# Path to YAML config file
ROLES_CONFIG_PATH=config/roles.yaml
